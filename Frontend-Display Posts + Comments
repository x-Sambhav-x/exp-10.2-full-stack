import { useEffect, useState } from "react";
import axios from "axios";

export default function PostList() {
  const [posts, setPosts] = useState([]);

  useEffect(() => {
    axios.get("/posts").then(res => setPosts(res.data));
  }, []);

  return (
    <div>
      {posts.map(p => (
        <div key={p._id}>
          <h2>{p.title}</h2>
          <p>{p.content}</p>
          <small>by {p.author.username}</small>
        </div>
      ))}
    </div>
  );
}
